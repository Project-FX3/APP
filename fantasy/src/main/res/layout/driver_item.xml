<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageViewPiloto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Fernando Alonso"
        android:textSize="16sp"
        android:layout_toEndOf="@id/imageViewPiloto"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewEscuderia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aston Martin"
        android:textSize="14sp"
        android:layout_toEndOf="@id/imageViewPiloto"
        android:layout_below="@id/textViewNombre"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewNumeroPiloto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEscuderia"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imageViewPiloto"
        tools:text="14"
        android:textSize="14sp" />

</RelativeLayout>

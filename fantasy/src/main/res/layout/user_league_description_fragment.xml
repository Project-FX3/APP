<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/beigeF1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@color/redF1"
        android:orientation="horizontal"
        android:paddingBottom="9dp">

        <TextView
            android:id="@+id/textViewNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="Nombre del Usuario"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/textViewPuntuacionUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="PuntuaciÃ³n: 0"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>


    <TextView
        android:id="@+id/textViewPilotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilotos"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />


    <GridLayout
        android:id="@+id/grid_layout_drivers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:orientation="horizontal">


        <include
            layout="@layout/driver_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"/>

        <include
            layout="@layout/driver_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"/>

        <include
            layout="@layout/driver_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"/>

        <include
            layout="@layout/driver_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"/>

    </GridLayout>

    <ImageView
        android:id="@+id/imageViewLogoApp"
        android:layout_width="190dp"
        android:layout_height="111dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/logo" />
</LinearLayout>

